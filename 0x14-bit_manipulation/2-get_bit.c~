#include "main.h"
/**
 * get_bit - a function that returns
 * the value of a bit at a given index. Index work
 * @n: how far to run
 * @index: index to go through
 * Return: int
 */
int get_bit(unsigned long int n, unsigned int index)
{
	if (index > 32)
		return (-1);

	bool result = n >> index & 1
	return (result);
}
